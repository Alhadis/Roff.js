{
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"es6": true,
		"mocha": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"eqeqeq": [
			"error",
			"smart"
		],
		"eol-last": [
			"error",
			"always"
		],
		"indent": [
			"error",
			"tab",
			{
				"ignoreComments": true,
				"VariableDeclarator": 0,
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"no-fallthrough": [
			"error",
			{"commentPattern": "[Ff]alls?[-\\s]?through"}
		],
		"no-return-await": "error",
		"no-case-declarations": 0,
		"no-cond-assign": 0,
		"no-console": 0,
		"no-empty": 0,
		"quotes": [
			"error",
			"double",
			{"avoidEscape": true}
		],
		"semi": [
			"error",
			"always"
		],
		"spaced-comment": [
			"error",
			"always"
		],
		"yoda": [
			"error",
			"always",
			{"onlyEquality": true}
		]
	},
	"overrides": [{
		"files": ["lib/postproc/postprocessor.mjs"],
		"rules": {
			"no-unused-vars": ["error", {"varsIgnorePattern": "WW1"}],
			"spaced-comment": 0,
			"semi": 0
		}
	},{
		"files": ["lib/**/*.mjs"],
		"rules": {"indent": 0}
	},{
		"files": ["lib/adapters/utils.mjs"],
		"rules": {"quotes": 0}
	}]
}
